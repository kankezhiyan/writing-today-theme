<div class="post-main">

    <% if (is_post()) { %>
    
        <div class="post-main-title">
            <%= page.title %>
        </div>
        <div class="post-meta" style="margin-bottom: 0;">
            by：<%= page.tags.data[0].name %>
        </div>
        <div class="post-meta" style="margin-bottom: 0;">
            约<%= symbolsCount(page) %>字 | 需 <%= symbolsTime(page) %>
        </div>
        <div class="post-meta">
            <%- date(page.date, "YYYY-MM-DD") %>
        </div>
        <% if(page.stars) { %>
            <div class="post-book">
                <div class="book-name">
                    <%= page.title %>
                </div>
                <div class="book-stars">
                    <span>评分</span>
                    <% score = page.stars %>
                    <% if(score !== 'null'){
                            full_score = score - score % 1
                            half_score = Math.ceil(score % 1 )
                            empty_score = Math.floor(5 - score) %>
                        <% if(full_score > 0){ 
                            for (var i = 0; i < full_score; i++) { %>
                                <i class="fa fa-star"></i>
                                <% }
                        } %>
                        <% if(half_score > 0){ 
                            for (var i = 0; i < half_score; i++) { %>
                                <i class="fa fa-star-half-o"></i>
                                <% }
                        } %>
                        <% if(empty_score > 0){ 
                            for (var i = 0; i < empty_score; i++) { %>
                                <i class="fa fa-star-o"></i>
                                <% }
                        } %>
                    <% } else { %>
                        <p>未评分</p>
                    <% } %>
                </div>
            </div>
        <% } %>
        <div class="post-md">
            <%- page.content %>
        </div>
        <div class="post-btn">
            <a href="<%- url_for(page.tags.data[0].path) %>" class="fast-btn"><i class="fa fa-eye"></i>作者</a>
            <% if (page.tags.data.length > 1) { %>
                <a href="<%- url_for(page.tags.data[1].path) %>" class="fast-btn"><i class="fa fa-eye"></i>章节</a>
            <% } %>
        </div>

    <% } else { %>

        <div class="post-md">
            <%- page.content %>
        </div>

    <% } %>

</div>